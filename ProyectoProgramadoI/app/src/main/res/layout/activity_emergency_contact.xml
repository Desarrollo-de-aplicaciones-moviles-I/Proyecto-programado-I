                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:drawableLeft="@drawable/delete_1487_svgrepo_com"
                    android:drawablePadding="8dp"
                    android:drawableTint="#5D5A5A"
