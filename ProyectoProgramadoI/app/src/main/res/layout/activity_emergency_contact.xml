                    android:layout_width="169dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/user_svgrepo_com"
                    android:drawablePadding="8dp"
                    android:drawableTint="#5D5A5A"
                    android:fontFamily="sans-serif-medium"
                    android:hint="Name"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/editTxtPhoneC1"
                    app:layout_constraintHorizontal_bias="0.32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editTxtPhoneC1"
                    android:layout_width="118dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:drawableLeft="@drawable/phone_svgrepo_com"
                    android:drawablePadding="8dp"
                    android:drawableTint="#5D5A5A"
                    android:fontFamily="sans-serif-medium"
