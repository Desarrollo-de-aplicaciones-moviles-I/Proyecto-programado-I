                <TextView
                    android:id="@+id/btnEditContact1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/edit_svgrepo_com"
                    android:drawablePadding="8dp"
                    android:drawableTint="#5D5A5A"
                    android:text="@string/btnEditContact"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnSaveContact1"
                    app:layout_constraintHorizontal_bias="0.242"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTxtNameC1"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/btnSaveContact1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:drawableLeft="@drawable/save_svgrepo_com"
                    android:drawablePadding="8dp"
                    android:drawableTint="#5D5A5A"
                    android:text="@string/btnSaveContact"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnDeleteContact1"
                    app:layout_constraintTop_toBottomOf="@+id/editTxtPhoneC1"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
